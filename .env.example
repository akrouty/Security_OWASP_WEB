# === Required ===
# Long random secret. Replace before running (never commit the real one).
SECRET_KEY=<long random from: python -c "import secrets; print(secrets.token_urlsafe(64))">

# JWT signing algorithm
JWT_ALGO=HS256

# Access token lifetime (minutes)
ACCESS_MINUTES=30

# Environment: dev or prod
APP_ENV=dev

# If true, the app will EXIT even in dev when SECRET_KEY is weak/short.
STRICT_SECRETS=false

# Frontend origins allowed by CORS (comma-separated, no spaces)
# Add your real frontend domain(s) in prod.
FRONTEND_ORIGINS=http://127.0.0.1:5173,http://localhost:5173

# === Optional / future ===
# DATABASE_URL=postgresql+psycopg://user:pass@localhost:5432/appdb
# RATE_LIMIT_LOGIN_MAX=5
# RATE_LIMIT_LOGIN_WINDOW=60

# A10 / SSRF
OUTBOUND_ALLOW_HOSTS=example.com,.example.org
OUTBOUND_BLOCK_PRIVATE=true
OUTBOUND_ALLOWED_PORTS=80,443
